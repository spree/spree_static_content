<% content_for :page_title do %>
  <%= plural_resource_name(Spree::Page) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_page, scope: :static_content), new_object_url, icon: 'plus', class: 'btn-primary', id: 'admin_new_page' %>
<% end %>

<% unless @pages_by_locale[I18n.locale].nil? %>
  <%= render partial: 'listing_locale', locals:
    { locale: I18n.locale, pages: @pages_by_locale[I18n.locale] } %>
  <% @pages_by_locale.delete I18n.locale %>
<% end %>

<% @pages_by_locale.each do |locale, pages| %>
  <%= render partial: 'listing_locale', locals: { locale: locale, pages: pages } %>
<% end %>
